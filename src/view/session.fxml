        <ImageView fitHeight="200" fitWidth="360">
                <Image url="@loGo.png"/>
        </ImageView> 
    </VBox>
    <VBox> 
        <padding>
            <Insets top="50"/>
        </padding>
    </VBox>
    <HBox spacing="20" alignment="BOTTOM_CENTER">
        <Text styleClass="button" text="Membership Management System"/>
    </HBox>
    <HBox styleClass="header" spacing="30" alignment="BOTTOM_CENTER">
        <Button onAction="#handleLogin" styleClass="button" text="Login"/>
